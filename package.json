{
  "name": "my-new-project",
  "type": "module",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/supertest": "^2.0.12",
    "@wdio/allure-reporter": "^8.12.2",
    "@wdio/cli": "^8.12.2",
    "@wdio/cucumber-framework": "^7.18.0",
    "@wdio/local-runner": "^8.12.1",
    "@wdio/spec-reporter": "^8.12.2",
    "chai": "^4.3.7",
    "chromedriver": "^114.0.2",
    "dotenv": "^16.3.1",
    "geckodriver": "^4.0.4",
    "mysql2": "^3.5.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-geckodriver-service": "^5.0.1",
    "winston": "^3.10.0"
  },
  "scripts": {
    "test": "wdio --require=dotenv/config run ./config/wdio.conf.ts",
    "repl-debug": "npx wdio repl chrome",
    "test-ist-tz": "TZ=Asia/Kolkata && npm test",
    "test-singa-tz": "TZ=Asia/Singapore && npm test",
    "test-utc-tz": "TZ=UTC && npm test",
    "qa:demo": "export HEADLESS=N && wdio run config/wdio.qa.conf.ts --cucumberOpts.tagExpression='@Demo'",
    "qa:smoke": "wdio run config/wdio.qa.conf.ts --cucumberOpts.tagExpression='@Smoke'",
    "qa:sanity": "export HEADLESS=N && wdio run config/wdio.qa.conf.ts --cucumberOpts.tagExpression='@Sanity'",
    "qa:regression": "export HEADLESS=N && wdio run config/wdio.qa.conf.ts --cucumberOpts.tagExpression='@Regression'"
  }
}
